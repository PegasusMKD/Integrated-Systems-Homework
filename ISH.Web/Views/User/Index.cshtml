@model List<ISH.Service.Dtos.Authentication.UserDto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Users</h1>

<div class="row" style="padding-bottom: 1em">
    <a asp-controller="User" asp-action="Import" class="btn btn-primary" style="margin-right: 1em">Import Users</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Roles</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (var index = 0; index < Model.Count; index++)
        {
            var user = Model[index];
            <tr>
                <th scope="row">@(index + 1)</th>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@(user.Roles != null ? string.Join(",", user.Roles) : "")</td>
                <td>
                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-secondary">Edit</a>
                    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>