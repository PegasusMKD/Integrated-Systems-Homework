@model Integrated_Systems_Homework.ViewControllers.Models.UpdateTicketModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <input asp-for="ViewSlotId" type="hidden" />
            <input asp-for="Guid" type="hidden" />
            <input asp-for="returnUrl" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-secondary" />
                <a asp-controller="Ticket" asp-action="Back" asp-route-returnUrl="@Model.returnUrl" class="btn btn-danger">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}