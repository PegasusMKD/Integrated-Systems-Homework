@model Integrated_Systems_Homework.ViewControllers.Models.CreateXTicketsModel

@{
    ViewData["Title"] = "Create X Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>View Slot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddXToViewSlot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="xTickets" class="control-label">Number of tickets:</label>
                <input asp-for="xTickets" class="form-control" />
                <span asp-validation-for="xTickets" class="text-danger"></span>
            </div>
            <input asp-for="viewSlotId" type="hidden"/>
            <input asp-for="returnUrl" type="hidden"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-controller="Ticket" asp-action="Back" asp-route-returnUrl="@Model.returnUrl" class="btn btn-danger">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
